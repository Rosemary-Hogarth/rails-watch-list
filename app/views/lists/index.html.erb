<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1?q=80&w=1325&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Your Movie Lists</h1>
    <p>Start creating now!</p>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-info" %>
  </div>
</div>



<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm p-3 mb-5 rounded">
          <div class="card-category" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1710961232986-36cead00da3c?q=80&w=2168&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D); ">
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
