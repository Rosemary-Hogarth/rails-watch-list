    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-info" %>
  <div class="card-container">
    <% @list.movies.each do |movie| %>
      <div class="card mx-3">
        <img class="card-img-top" src="<%= movie.poster_url %>" alt="<%= @movie.title %>">
        <h1 class="mt-5"><%= movie.title %></h1>
        <p>Rating: <%= movie.rating %></p>
        <p><%= movie.overview %></p>
    <%= link_to 'Delete', bookmark_path(Bookmark.find_by(list: @list, movie: movie)), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  <% end %>
