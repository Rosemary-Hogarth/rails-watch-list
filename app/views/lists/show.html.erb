<% if @list.photo.attached? %>
  <div class="banner" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key %>);">
    <h1><%= @list.name %></h1>
  </div>
<% else %>
  <div class="banner" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?q=80&w=2656&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
      <h1><%= @list.name %></h1>
  </div>
<% end %>
<div class="container d-flex justify-content-center align-items-center mt-1">
  <ul class="list-unstyled">



<div class="container mt-5">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-info mb-5" %>
    <div class="row d-flex justify-content-center">
      <% @bookmarks.each_slice(1) do |bookmark| %>
        <% bookmark.each do |bookmark| %>
          <div class="col-12">
            <div class="card-product">
              <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
                <div class="card-product-infos">
                  <h5 class="card-title"><%= bookmark.movie.title %></h5>
                  <p class="card-text">Rating: <%= bookmark.movie.rating %></p>
                  <p class="card-text"><%= bookmark.movie.overview %></p>
                  <p class="card-text"><i class="fa-solid fa-quote-left"></i><%= bookmark.comment %><i class="fa-solid fa-quote-right"></i></p>
                <div class="button"><%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <%= link_to "Back to lists", root_path, class: "btn btn-outline-secondary mt-4" %>
</div>
