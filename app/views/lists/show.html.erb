
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?q=80&w=2656&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
      <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <ul class="list-unstyled">
<div class="card-container">
  <% @list.movies.each do |movie| %>
    <div class="card mx-3">
      <img class="card-img-top" src="<%= movie.poster_url %>" alt="<%= @movie.title %>">
      <h1 class="mt-5"><%= movie.title %></h1>
      <p>Rating: <%= movie.rating %></p>
      <p><%= movie.overview %></p>
    </div>
  <% end %>
</div>

        <%= link_to "Back to lists", lists_path %>
    </ul>
  </div>
